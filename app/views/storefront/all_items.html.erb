 <h1>All of our stuff for sale</h1>
	 <div class="row">
	  <% @products.each do |product| %>
	  <div class="modal fade" id="exampleModal_<%= product.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
	  <div class="modal-dialog" role="document">
	    <div class="modal-content">
	      <div class="modal-header">
	        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
	        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
	          <span aria-hidden="true">&times;</span>
	        </button>
	      </div>
	      <div class="modal-body">
	        <% if product.image.url.nil? == false %>
          		<p><%= image_tag product.image.url, size: 150, class: "img-responsive" %></p>
       		<% end %>
        	<h3><%= link_to product.name, product %></h3>
        	<p><%= number_to_currency product.price %></p>
        	<p>made by <%= product.brand %></p>
	      </div>
	      <div class="modal-footer">
	      	<!-- delete button code in here -->
	      </div>
	    </div>
	  </div>
	</div>

    <div class="col-xs-4">
      <div class="well">
        <% if product.image.url.nil? == false %>
          <p><%= image_tag product.image.url, size: 50, class: "img-responsive" %></p>
        <% end %>
        <h3><%= link_to product.name, product %></h3>
        <p><%= number_to_currency product.price %></p>
        <p>
        	<!-- Adding in boostrap modal -->
          <a href="#" data-toggle="modal" data-target="#exampleModal_<%= product.id%>"> 
            <span class="glyphicon glyphicon-plus"></span> Quick Info
          </a>
        </p>
      </div>
    </div>
  <% end %>
</div>
